@model MyApp.Models.Producto

@{
    ViewData["Title"] = "Editar producto";
}

<div class="mx-auto max-w-3xl px-4 py-8">
    <div class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow">
        <div class="border-b border-gray-200 bg-gray-50 px-6 py-4">
            <h1 class="text-2xl font-semibold text-gray-900">Editar producto</h1>
            <p class="mt-1 text-sm text-gray-500">Actualiza la informaci√≥n del producto seleccionado.</p>
        </div>
        <div class="px-6 py-6">
            <form asp-action="Edit" method="post" class="space-y-6">
                <input type="hidden" asp-for="Id" />

                <div>
                    <label asp-for="Nombre" class="mb-1 block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Nombre" class="w-full rounded border border-gray-300 px-4 py-2 text-gray-900 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="Nombre" class="mt-1 block text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="CodigoSKU" class="mb-1 block text-sm font-medium text-gray-700"></label>
                    <input asp-for="CodigoSKU" class="w-full rounded border border-gray-300 px-4 py-2 text-gray-900 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="CodigoSKU" class="mt-1 block text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="CantidadStock" class="mb-1 block text-sm font-medium text-gray-700"></label>
                    <input asp-for="CantidadStock" class="w-full rounded border border-gray-300 px-4 py-2 text-gray-900 shadow-sm focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    <span asp-validation-for="CantidadStock" class="mt-1 block text-sm text-red-600"></span>
                </div>

                <div class="flex items-center justify-end space-x-4">
                    <a asp-action="Index" class="inline-flex items-center rounded border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-300 focus:ring-offset-2">Cancelar</a>
                    <button type="submit" class="inline-flex items-center rounded bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
